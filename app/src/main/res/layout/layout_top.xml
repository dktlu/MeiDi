<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/background_bottom_tab" >
    
    <ImageView 
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_meidi_logo"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"/>
    
    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_top_menu" 
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
    
    <ImageView 
        android:id="@+id/iv_search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_top_search"
        android:layout_toLeftOf="@id/iv_menu"
        android:layout_marginRight="15dp"/>
    
    <ImageView 
        android:id="@+id/iv_select"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_top_tobottom"
        android:layout_toLeftOf="@id/iv_search"
        android:layout_marginRight="15dp"/>
    
    <TextView 
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="长沙"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_select"
        android:layout_marginRight="5dp"/>
    

</RelativeLayout>
